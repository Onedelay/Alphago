<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/shape_green_rectangle">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/how_to_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 사진으로 할 것인가요?"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_img_capture"
        android:text="사진 촬영"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/how_to_img"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_dialog"/>

    <Button
        android:id="@+id/btn_img_album_select"
        android:text="사진 선택"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/btn_img_capture"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_dialog"/>
</android.support.constraint.ConstraintLayout>