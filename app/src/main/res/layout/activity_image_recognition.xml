<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cardbook2"
    tools:context="com.alphago.alphago.activity.ImageRecognitionActivity">

    <ImageView
        android:id="@+id/image_recognition"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/bg_img_line"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_pronounce"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_pronounce_white2"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="@+id/result_recog"
        app:layout_constraintTop_toTopOf="@id/image_recognition" />

    <TextView
        android:id="@+id/result_recog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/board_title"
        android:gravity="center"
        android:text="Alphago"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toRightOf="@+id/image_recognition"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button_learn"
        android:text="home"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_recognition"
        app:layout_constraintLeft_toRightOf="@+id/btn_save"
        app:layout_constraintRight_toRightOf="@id/result_recog"
        app:layout_constraintTop_toBottomOf="@id/result_recog" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/button_learn"
        android:text="save"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_home"
        app:layout_constraintLeft_toLeftOf="@id/result_recog"
        app:layout_constraintRight_toRightOf="@id/result_recog"
        app:layout_constraintTop_toTopOf="@id/btn_home" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/button_learn"
        android:text="retry"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_home"
        app:layout_constraintLeft_toLeftOf="@id/result_recog"
        app:layout_constraintRight_toLeftOf="@id/btn_save"
        app:layout_constraintTop_toTopOf="@id/btn_home" />

</android.support.constraint.ConstraintLayout>
