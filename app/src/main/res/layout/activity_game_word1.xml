<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game2"
    tools:context="com.alphago.alphago.activity.GameWordActivity1">

    <ImageView
        android:id="@+id/img_wgame1_bgqst"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/wgame1_guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wgame1_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_qst" />

    <ImageButton
        android:id="@+id/btn_wgame1_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_wgame1_exit"
        app:layout_constraintRight_toRightOf="@+id/btn_wgame1_exit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_wgame1_exit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_exit"
        app:layout_constraintLeft_toRightOf="@+id/layout_word_game1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_word_game1" />

    <TextView
        android:id="@+id/tv_wgame1_tvqst"
        style="@style/CardBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Q1"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/img_wgame1_tvqst"
        app:layout_constraintRight_toRightOf="@+id/img_wgame1_tvqst"
        app:layout_constraintTop_toTopOf="@+id/img_wgame1_bgqst" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_word_game1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_green_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintLeft_toLeftOf="@+id/wgame1_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.Guideline
            android:id="@+id/wgame1_guideline4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8">

        </android.support.constraint.Guideline>

        <android.support.constraint.Guideline
            android:id="@+id/wgame1_guideline3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5">

        </android.support.constraint.Guideline>

        <TextView
            android:id="@+id/img_wgame1_lqst"
            style="@style/GameFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/wgame1_guideline4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_wgame1_qst" />

        <Button
            android:id="@+id/btn_wgame1_ex2"
            style="@style/GameFont"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_ex"
            android:text="X"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_wgame1_ex1"
            app:layout_constraintLeft_toLeftOf="@+id/wgame1_guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_wgame1_ex1" />

        <Button
            android:id="@+id/btn_wgame1_ex1"
            style="@style/GameFont"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/button_ex"
            android:text="O"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/wgame1_guideline3"
            app:layout_constraintTop_toBottomOf="@+id/wgame1_guideline4" />

        <ImageView
            android:id="@+id/img_wgame1_qst"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="130dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/wgame1_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/wgame1_guideline2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6">

    </android.support.constraint.Guideline>

    <ImageView
        android:id="@+id/img_wgame1_tch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wgame1_guideline"
        app:layout_constraintTop_toBottomOf="@+id/img_wgame1_tvqst"
        app:srcCompat="@drawable/teacher3" />

    <ImageView
        android:id="@+id/img_wgame1_tvqst"
        android:layout_width="180dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_wgame1_bgqst"
        app:layout_constraintLeft_toLeftOf="@+id/img_wgame1_bgqst"
        app:layout_constraintRight_toRightOf="@+id/img_wgame1_bgqst"
        app:layout_constraintTop_toTopOf="@+id/img_wgame1_bgqst"
        app:srcCompat="@drawable/tv_qst" />

</android.support.constraint.ConstraintLayout>
